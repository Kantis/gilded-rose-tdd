<html lang="en">
<body>
<h1>{{now}}</h1>
<form method="post" action="/delete-items">
    <input type="submit" value="Delete">
    <table>
        <tr>
        <th></th>
            <th>ID</th>
            <th>Name</th>
            <th>Sell By Date</th>
            <th>Sell By Days</th>
            <th>Quality</th>
            <th>Price</th>
        </tr>
        {{#if showNewItemRow}}
        <tr>
            <td></td>
            <td><input type="text" name="new-itemId" required size="5"></td>
            <td><input type="text" name="new-itemName" required size="20"></td>
            <td><input type="date" name="new-itemSellBy"></td>
            <td></td>
            <td style="text-align: right"><input type="number" name="new-itemQuality" required size="3"></td>
            <td><input type="submit" formaction="/add-item" value="Add" style="width: 100%"></td>
        </tr>
        {{/if}}
        {{#each this.items}}
            <tr>
                <td><input type="checkbox" name="{{id}}"></td>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{sellByDate}}</td>
                <td style="text-align: right">{{sellByDays}}</td>
                <td style="text-align: right">{{quality}}</td>
                <td style="text-align: right">{{price}}</td>
            </tr>
        {{/each}}
    </table>
</form>
</body>
</html>
